{% extends 'base.html.twig' %}

{% block title %}Modifier password - La Boutique Française{% endblock %}

{% block content %}
    <h1>Modifier mon mot de passe</h1>

    <a href="{{ path('account') }}">Retourner à mon compte</a>
    <hr>
    {% if notification %}
        <div class="alert alert-info">{{ notification }}</div>
    {% endif %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" class="btn btn-primary" value="Modifier">
    {{ form_end(form) }}
    <hr>

{% endblock %}